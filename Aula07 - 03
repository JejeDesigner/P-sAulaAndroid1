package com.example.aula07_03

import android.os.Bundle
import androidx.activity.enableEdgeToEdge
import androidx.appcompat.app.AlertDialog
import androidx.appcompat.app.AppCompatActivity
import androidx.core.view.ViewCompat
import androidx.core.view.WindowInsetsCompat
import kotlinx.coroutines.flow.internal.NoOpContinuation.context
import kotlin.coroutines.jvm.internal.CompletedContinuation.context

@Suppress("UNUSED_EXPRESSION")
class MainActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        enableEdgeToEdge()
        setContentView(R.layout.activity_main)
        ViewCompat.setOnApplyWindowInsetsListener(findViewById(R.id.main)) { v, insets ->
            val systemBars = insets.getInsets(WindowInsetsCompat.Type.systemBars())
            v.setPadding(systemBars.left, systemBars.top, systemBars.right, systemBars.bottom)
            insets
        }
        // mensagem Simples
        AlertDialog.Builder(this).setMessage("oi").show()

        // mensagem com título
        AlertDialog.Builder(this).setMessage("oi").setTitle("título").show()

        // mensagem com ícone
        AlertDialog.Builder(this).setMessage("oi").setTitle("título").setIcon(R.mipmap.ic_launcher).show()

        //mesagem com botão ok
        AlertDialog.Builder(this).setMessage("oi").setTitle("título")
            .setIcon(R.mipmap.ic_launcher)
            .setNeutralButton("OK", null)
            .show()

        //mensagem com obejeto builder
        var b = AlertDialog.Builder(this)
        b.setTitle("título")
        b.setMessage("oi")
        b.show()
    }
}
